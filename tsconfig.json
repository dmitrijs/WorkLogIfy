{
  "compilerOptions": {
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "target": "esnext",
    "jsx": "preserve",
    "sourceMap": true,
    // this enables stricter inference for data properties on `this`
    // "strict": true,
    // if using webpack 2+ or rollup, to leverage tree shaking:
    "module": "es2015",
    "moduleResolution": "node"
  }
}
