{
  "name": "work-log-ify",
  "version": "1.4.0",
  "description": "WorkLogIfy",
  "main": "app/main/.parcel/main.js",
  "scripts": {
    "start": "run-s main:build watch",
    "release": "run-s parcel:build \"electron:build {@}\" --",
    "watch": "run-p -r parcel:watch electron:start",
    "electron:start": "nodemon --watch app/main/.parcel --exec \"electron .\"",
    "electron:build": "build --x64 --publish=never",
    "parcel:watch": "run-p -r main:watch renderer:watch",
    "main:watch": "parcel watch app/main/main.ts app/main/preload.ts --no-autoinstall --out-dir app/main/.parcel --out-file main --target electron",
    "renderer:watch": "parcel app/renderer/index.html --no-autoinstall --port 1124 --out-dir app/renderer/.parcel/development",
    "parcel:build": "run-s main:build renderer:build",
    "main:build": "parcel build app/main/main.ts --out-dir app/main/.parcel --out-file main --target electron",
    "renderer:build": "parcel build app/renderer/index.html --public-url ./ --out-dir app/renderer/.parcel/production",
    "test": "run-s parcel:build \"test:jest {@}\" --",
    "test:jest": "jest",
    "lint": "tslint app/**/*.ts{,x}"
  },
  "author": "Dmitrijs Sadovskis",
  "license": "MIT",
  "build": {
    "productName": "WorkLogIfy",
    "appId": "lv.ify.worklog",
    "files": [
      "app/**",
      "!app/main/main.ts",
      "!app/main/tests/**",
      "!app/renderer/**",
      "app/renderer/.parcel/production/**",
      "!app/**/*.map"
    ],
    "mac": {
      "target": [
        "zip"
      ],
      "artifactName": "${productName}-mac-v${version}.${ext}"
    },
    "win": {
      "target": [
        "zip"
      ],
      "artifactName": "${productName}-win-v${version}.${ext}"
    },
    "linux": {
      "target": [
        "zip"
      ],
      "category": "Development",
      "artifactName": "${productName}-linux-v${version}.${ext}"
    },
    "directories": {
      "output": "release"
    }
  },
  "jest": {
    "verbose": true,
    "collectCoverageFrom": [
      "app/renderer/**",
      "!app/renderer/index.ts",
      "!app/renderer/tests/**",
      "!app/renderer/.parcel/**"
    ],
    "transform": {
      "^.+\\.tsx?$": "babel-jest",
      "^.*\\.vue$": "vue-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "vue",
      "json",
      "node"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.7.2",
    "@babel/plugin-proposal-class-properties": "^7.7.0",
    "@babel/plugin-proposal-decorators": "^7.6.0",
    "@babel/preset-env": "^7.4.5",
    "@types/jest": "^24.0.15",
    "@types/lodash": "^4.14.144",
    "@types/node": "^12.11.1",
    "@vue/component-compiler-utils": "^3.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^24.9.0",
    "babel-preset-vue": "^2.0.2",
    "direct-vuex": "^0.7.5",
    "electron": "^5.0.5",
    "electron-builder": "^20.44.4",
    "immutable": "^3.8.2",
    "jest": "^24.8.0",
    "moment": "^2.24.0",
    "nodemon": "^1.19.1",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.3",
    "sass": "^1.23.0",
    "spectron": "^7.0.0",
    "ts-jest": "^24.1.0",
    "tslint": "^5.18.0",
    "typescript": "^3.5.2",
    "vue": "^2.6.10",
    "vue-class-component": "latest",
    "vue-jest": "^3.0.4",
    "vue-template-compiler": "^2.6.10",
    "vuex": "^3.1.1"
  },
  "dependencies": {
    "app-root-path": "^2.2.1",
    "electron-is-dev": "^1.1.0",
    "glob": "^7.1.6",
    "vue-hot-reload-api": "^2.3.4",
    "vue-property-decorator": "^8.3.0"
  }
}
